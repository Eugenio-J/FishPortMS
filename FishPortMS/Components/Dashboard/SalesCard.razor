<style>
    .icon-class {
        background: #FFE85A !important;
        color: #F7FFF1 !important;
        padding: 13px !important;
        font-size: 50px !important;
        border-radius: 7px !important;
    }

    .inc-div {
        color: #56E783 !important;
        padding: 0px 10px !important;
        padding-top: 4px !important;
        padding-bottom: 6px !important;
        border-radius: 8px !important;
        font-size: 13px !important;
        height: 35px !important;
    }

    .dec-div {
        color: #FD8484 !important;
        padding: 0px 10px !important;
        padding-top: 4px !important;
        padding-bottom: 6px !important;
        border-radius: 8px !important;
        font-size: 13px !important;
        height: 33px !important;
    }

    .mud-typography-subtitle1 {
        font-weight: 700 !important;
        letter-spacing: .2px !important;
        font-size: 16px !important;
        color: #45576F !important;
    }

    .mud-typography-subtitle2 {
        font-family: 'Poppins' !important;
        font-weight: 400 !important;
        letter-spacing: .6px !important;
        font-size: 13px !important;
        color: #A3B2C2 !important;
        text-transform: uppercase !important;
    }

    .header-date {
        font-family: 'Poppins' !important;
        font-weight: 500 !important;
        letter-spacing: .6px !important;
        font-size: 13px !important;
        color: #fff;
        text-transform: uppercase !important;
    }

    .fa-chart-simple {
        font-size: 30px;
    }

    .view-order-div {
        cursor: pointer;
        transition: 0.3s ease;
    }

    .view-order-div:hover {
        background-color: #F5F5F5;
    }
</style>

<MudItem xs="12" sm="6" lg="3">

    <div class="mud-width-full container-parent position-relative" style="height: 155px;">
        <div class="d-block pt-5 px-6">

            <div class="mt-0">

                <div class="position-absolute" style="right: 25px; top: 20px;">      
                    <i class="fa-solid fa-chart-simple" style="color: #002760;"></i>
                </div>

                <div class="d-flex justify-content-between">
                    <div class="d-block">
                        <MudText Typo="Typo.subtitle2" Style="@($"color:{Colors.BlueGray.Darken1}; font-size: 13px !important;")">@Date @Title</MudText>
                        <MudText Typo="Typo.subtitle1" Style="font-size: 17px !important;" Class="mt-5">P @string.Format("{0:N2}", Value)</MudText>
                    </div>
                </div>

                <div class="py-3 my-3 text-center view-order-div" @onclick="() => OnClick.InvokeAsync()" style="border-top: 1px solid #E0EAF7">
                    <span class="order-text" style="font-family: 'Poppins'!important; font-weight: 400!important; color: #A3B2C2 !important; font-size: 12px!important; letter-spacing: .3px!important;">
                        VIEW REPORT
                    </span>
                </div>

            </div>
        </div>
    </div>
</MudItem>

@code {

    [Parameter]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public string Date { get; set; } = string.Empty;
    [Parameter]
    public string Icon { get; set; } = string.Empty;
    [Parameter]
    public string Value { get; set; } = string.Empty;
    [Parameter]
    public EventCallback OnClick { get; set; }
}
