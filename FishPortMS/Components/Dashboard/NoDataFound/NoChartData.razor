
@* NoDataChart.razor *@
<div class="no-data-chart-container">
    <!-- Empty State Container -->
    <div class="empty-state-container">

        <div class="chart-header">
            <h2 class="chart-title">@Title</h2>
            <div class="chart-divider"></div>
        </div>
        <!-- Icon -->
        <div class="icon-container">
            <div class="main-icon">
                <svg class="chart-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
            </div>
            <!-- Decorative trend icon -->
            <div class="trend-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
            </div>
        </div>

        <!-- Message -->
        <h3 class="message-title">@Message</h3>
        <p class="message-description">@Description</p>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Chart";
    [Parameter] public string Message { get; set; } = "No data available";
    [Parameter] public string Description { get; set; } = "There's no data to display at this time. Try adjusting your filters or check back later.";
    [Parameter] public bool ShowRefreshButton { get; set; } = true;
    [Parameter] public EventCallback OnRefresh { get; set; }
    [Parameter] public EventCallback OnFilterAdjust { get; set; }
    [Parameter] public EventCallback OnContactSupport { get; set; }
}
