@* SALE SUMMARY *@
<MudItem xs="12">
    <div class="px-md-8 px-6 pt-5 pb-2 my-5" style="border: 1px solid #E4E7EF; border-radius: 12px; height: 255px;">
        <MudText Typo="Typo.h4" Style="font-size: 12px!important; font-weight: 600!important; letter-spacing: .2px!important; border-bottom: 1px solid #E4E7EF; padding-bottom: 20px; margin-bottom: 25px;" Class="">
            <MudImage Style="height:20px; width:23px; margin-bottom: 3px;" Class="mr-2" Src="images/form_imgs/profit.png"></MudImage>
            SALE SUMMARY :
        </MudText>
        <div class="d-flex justify-content-between mb-1">
            <span class="order-text" style="font-weight: 500!important; color: #929FAD!important;">
                Gross Sale :
            </span>
            <span class="order-text" style=" font-weight: 600!important;">
                P @string.Format("{0:N2}", Summary.GrossSales)
            </span>
        </div>
        <div class="d-flex justify-content-between mb-1">
            <span class="order-text" style="font-weight: 500!important; color: #929FAD!important;">
                Porsyento (%) :
            </span>
            <span class="order-text" style=" font-weight: 600!important;">
                @string.Format("{0:N0}", Summary.DeductedPercentage)
            </span>
        </div>
        <div class="d-flex justify-content-between mb-1">
            <span class="order-text" style="font-weight: 500!important; color: #929FAD!important;">
                Porsyento :
            </span>
            <span class="order-text" style=" font-weight: 600!important;">
                P @string.Format("{0:N2}", Summary.DeductedAmount)
            </span>
        </div>

        <div class="d-flex justify-content-between pb-5 mb-3" style="border-bottom: 1px solid #4E5E78;">
            <span class="order-text" style="font-weight: 500!important; color: #929FAD!important;">
                Expense :
            </span>
            <span class="order-text" style=" font-weight: 600!important;">
                P @string.Format("{0:N2}", Summary.ExpenseAmount)
            </span>
        </div>

        <div class="d-flex justify-content-between">
            <span class="order-text" style="font-weight: 500!important;">
                Net Sales :
            </span>
            <span class="order-text" style=" font-weight: 600!important;">
                P @string.Format("{0:N2}", @Summary.NetSales)
            </span>
        </div>
    </div>
</MudItem>


@code {
    [Parameter] public ReceiptSummaryDTO? Summary { get; set; } = new ReceiptSummaryDTO();
}
